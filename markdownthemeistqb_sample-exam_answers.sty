\NeedsTeXFormat{LaTeX2e}
\ProvidesExplPackage
  {markdownthemeistqb_sample-exam_answers}%
  {2023-10-11}%
  {0.0.1}%
  {LaTeX theme for the Markdown Package that typesets ISTQB Sample Exam Answers documents}

% Import common code
\markdownSetup
  { import = istqb/sample-exam }

% Metadata
\markdownSetupSnippet
  { metadata }
  {
    snippet = istqb/sample-exam/metadata,
    jekyllDataRenderers = {
      type = {
        \tl_gset:Nn
          \g_istqb_type_tl
          { #1~--~Answers }
      },
    },
  }

% Answers
\RequirePackage
  { longtable }
\RequirePackage
  { array }
\newcolumntype
  { C } [ 1 ] { >{ \centering\arraybackslash } p { #1 } }
\markdownSetupSnippet
  { answers }
  {
    snippet = { istqb/sample-exam/questions },
    fancyLists = true,
    renderers = {
      interblockSeparator = {
        \par
        \medskip
      },
      jekyllDataEnd = {
        \group_begin:
        % Prepare the heading of the table.
        \dim_set:Nn
          \l_tmpa_dim
          { 11.15cm }
        \cs_set:Npn
          \arraystretch
          { 1.5 }
        \tl_set:Nn
          \l_tmpa_tl
          {
            \begin
              { longtable }
              { | C { 1.9cm } | C { 1.5cm } | p { \l_tmpa_dim } | C { 2.4cm } | C { 1.4cm } | C { 1.9cm } | }
            \hline
            \textbf { Question~Number~(\#) } &
            \textbf { Correct~Answers } &
            \multicolumn
              { 1 }
              { C { \l_tmpa_dim } | }
              { \textbf { Explanation~/~Rationale } } &
            \textbf { Learning~Objective~(LO) } &
            \textbf { K-Level } &
            \textbf { Number~of~Points } \\
            \hline
            \endhead
          }
        % Prepare the lines of the table
        \seq_map_inline:Nn
          \g_istqb_questions_seq
          {
            % Record the question number.
            \tl_put_right:Nn
              \l_tmpa_tl
              { \textbf { ##1 } & }
            % Record the correct answers.
            \prop_get:NnN
              \g_istqb_answer_correct_keys_prop
              { ##1 }
              \l_tmpa_clist
            \tl_put_right:Ne
              \l_tmpa_tl
              {
                \clist_use:Nn
                  \l_tmpa_clist
                  { ,~ } &
              }
            % Record the explanation / rationale.
            \tl_put_right:Nn
              \l_tmpa_tl
              {
                \begin { minipage } [ t ] { \l_tmpa_dim }
              }
            \prop_get:NnN
              \g_istqb_question_explanation_prop
              { ##1 }
              \l_tmpb_tl
            \tl_put_right:NV
              \l_tmpa_tl
              \l_tmpb_tl
            \tl_put_right:Nn
              \l_tmpa_tl
              {
                \end { minipage }
                \par
              }
            \tl_put_right:Nn
              \l_tmpa_tl
              { & }
            % Record the learning objective.
            \tl_put_right:NV
              \l_tmpa_tl
              \g_istqb_prefix_tl
            \tl_put_right:Nn
              \l_tmpa_tl
              { - }
            \prop_get:NnN
              \g_istqb_question_learning_objective_prop
              { ##1 }
              \l_tmpb_tl
            \tl_put_right:NV
              \l_tmpa_tl
              \l_tmpb_tl
            \tl_put_right:Nn
              \l_tmpa_tl
              { & }
            % Record the K-level.
            \prop_get:NnN
              \g_istqb_question_k_level_prop
              { ##1 }
              \l_tmpb_tl
            \tl_put_right:NV
              \l_tmpa_tl
              \l_tmpb_tl
            \tl_put_right:Nn
              \l_tmpa_tl
              { & }
            % Record the number of points.
            \prop_get:NnN
              \g_istqb_question_number_of_points_prop
              { ##1 }
              \l_tmpb_tl
            \tl_put_right:NV
              \l_tmpa_tl
              \l_tmpb_tl
            \tl_put_right:Nn
              \l_tmpa_tl
              { \\ \hline }
          }
        % Typeset the table.
        \tl_put_right:Nn
          \l_tmpa_tl
          {
            \end { longtable }
          }
        \tl_use:N
          \l_tmpa_tl
        \group_end:
      },
    },
  }
\cs_generate_variant:Nn
  \tl_put_right:Nn
  { Ne }