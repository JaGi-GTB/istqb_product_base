              { -1 }
          }
        \tl_set:Nx
          \l_tmpa_tl
          {
            [
              \str_lowercase:V
                \l_tmpb_tl
            ]
          }
        \textit
          {
            \exp_last_unbraced:NV
              \hyperref
              \l_tmpa_tl
              { #1 }
          }
      }{
        \textit { \href { #3 } { #1 } }
